{{!-- Notes Tab --}}
<section id="{{partId}}" class="tab {{tabs.gear.cssClass}}" data-group="primary" data-tab="gear">

    {{#*inline "actions"}}
    <a data-action="chatItem" title="{{localize 'SPACER.actor.sheet.action.item.chat'}}"><i
            class="fa fa-comment"></i></a>
    <a data-action="editItem" title="{{localize 'SPACER.actor.sheet.action.item.edit'}}"><i class="fas fa-edit"></i></a>
    <a data-action="deleteItem" title="{{localize 'SPACER.actor.sheet.action.item.delete'}}"><i
            class="fas fa-trash"></i></a>
    {{/inline}}

    <table id="gear">
        <thead>
            <tr>
                <th>{{localize "SPACER.actor.sheet.table.item"}}</th>
                <th>{{localize "SPACER.actor.sheet.table.cr"}}</th>
                <th>{{localize "SPACER.actor.sheet.table.quality"}}</th>
                <th>{{localize "SPACER.actor.sheet.table.slots"}}</th>
                <th>{{localize "SPACER.actor.sheet.table.location"}}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each gear as | item |}}
            <tr data-item-id="{{item._id}}">
                <td>{{item.name}}</td>
                <td>{{item.system.credits}}</td>
                <td>{{item.system.quality.value}}/{{item.system.quality.max}}</td>
                <td>{{item.system.slots}}</td>
                <td>
                    <a class="mr-2" data-action="changeItemLocation"
                        title="{{localize (concat 'SPACER.actor.sheet.label.location.' item.system.location)}}"><i
                            class="{{property ../SPACER.item.gear.icons item.system.location}}"></i></a>
                </td>
                <td class="actions">{{> actions}}</td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>{{system.slotsUsed}}/{{system.slotsAvailable}}</td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</section>